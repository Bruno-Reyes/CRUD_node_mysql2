<% include partials/header %>

<div class="container mt-5">
    <div class="row">
        
        <div class="col-md-5">
                <div class="card">
                        <div class="card-body">
                                <form action="/update/<%= data.id_ali%>" method="POST" autocomplete="off">
                                    <div class="form-group">
                                      
                                      <!--<label for="TipoAlimento">Tipo Alimento:</label>
                                              <input type="text" name="tip_ali" class="form-control" id="TipoAlimento" placeholder="Que tipo de alimento es?" value="<%= data.tip_ali %>">-->
                                                <div class="input-group mb-3">
                                                        <div class="input-group-prepend">
                                                          <label class="input-group-text" for="inputGroupSelect01">Tipo: </label>
                                                        </div>
                                                        <select class="custom-select" id="inputGroupSelect01" name="tip_ali">
                                                          <option selected><%= data.tip_ali%></option>
                                                          <option >Verdura</option>
                                                          <option >Fruta</option>
                                                          <option >Origen Animal</option>
                                                          <option >Leguminosa</option>
                                                          <option >Leche y Sustitutos</option>
                                                          <option >Grasas</option>
                                                          <option >Colacion</option>
                                                        </select>
                                                </div>
                                    </div>
                                    <div class="form-group">
                                            <label for="Alimento">Nombre del Alimento:</label>
                                            <input type="text" name="nom_ali" class="form-control" id="Alimento" placeholder="Cual es su nombre?" value="<%= data.nom_ali %>">
                                    </div>
                                    <div class="form-group">
                                            <label for="KiloCalorias">KiloCalorias:</label>
                                            <input type="text" name="kil_cal" class="form-control" id="KiloCalorias" placeholder="Cuantas kilocalorias contiene?" value="<%= data.kil_cal %>">
                                    </div>
                                    <div class="form-group">
                                                <div class="input-group mb-3">
                                                        <div class="input-group-prepend">
                                                        <label class="input-group-text" for="inputGroupSelect01">Unidad: </label>
                                                        </div>
                                                        <select class="custom-select" id="inputGroupSelect01" name="uni_med">
                                                        <option selected><%= data.uni_med%></option>
                                                        <option >Pieza(s)</option>
                                                        <option >Cucharada(s)</option>
                                                        <option >Taza(s)</option>
                                                        <option >Bolsa(s)</option>
                                                        <option >Gramos</option>
                                                        <option >Cucharadita(s)</option>
                                                        <option >Rebanada(s)</option>
                                                        <option >Disparo(s)</option>
                                                        <option >Lata(s)</option>
                                                        <option >-</option>
                                                        </select>
                                                </div>
                                </div>    
                                    <button type="submit" class="btn btn-outline-info">CONFIRMAR</button>
                            </form>
                        </div>
                    </div>
        </div>
        
    </div>
</div>

<% include partials/footer %>